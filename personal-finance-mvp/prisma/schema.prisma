generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/// Default: SQLite for local dev. If DATABASE_PROVIDER is unset, fallback to sqlite.
/// Note: In production, set DATABASE_PROVIDER=postgresql and provide a Postgres DATABASE_URL.

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  createdAt    DateTime      @default(now())
  accounts     Account[]
  categories   Category[]
  budgets      Budget[]
  transactions Transaction[]
}

model Account {
  id           String        @id @default(cuid())
  userId       String
  name         String
  type         String
  createdAt    DateTime      @default(now())
  User         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
}

model Category {
  id           String        @id @default(cuid())
  userId       String
  name         String
  kind         String
  createdAt    DateTime      @default(now())
  User         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgets      Budget[]
  transactions Transaction[]

  @@unique([userId, name, kind])
}

model Budget {
  id          String   @id @default(cuid())
  userId      String
  categoryId  String
  month       DateTime
  amountCents Int
  createdAt   DateTime @default(now())
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, month])
}

model Transaction {
  id           String   @id @default(cuid())
  userId       String
  accountId    String
  categoryId   String
  date         DateTime
  amountCents  Int
  note         String?
  createdAt    DateTime @default(now())
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Account      Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  Category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}
